<div class="column is-one-quarter">
    <div class="panel">
        <p class="panel-heading">Profile</p>
        <div class="panel-block">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <% if current_user.avatar.present?%>
                        <%= image_tag current_user.avatar.to_s %>
                        <% else %>
                        <%= image_tag (asset_path 'no_img.png') %>
                        <% end %>
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <a href="/profile_users/<%=current_user.id%>">
                                <strong><%= current_user.name%></strong> <br>
                                <small>@<%= current_user.username%></small>
                            </a>
                        </p>
                    </div>
                </div>
            </article>
        </div>
        <div class="panel-block">
            <div class="level is-mobile">
                <div class="level-item has-centered-text">
                    <div>
                        <p class="heading">
                            Tweeets
                        </p>
                        <p class="title is-6">
                            <%= current_user.tweeets.count%>
                        </p>
                    </div>
                </div>

                <div class="level-item has-centered-text">
                    <div>
                        <%= link_to following_url(@user), method: 'GET' do%>
                            <p class="heading">
                                Following
                            </p>
                            <p class="title is-6">
                                <%= @user.followees.count%>
                            </p>
                        <% end %>
                    </div>
                </div>

                <div class="level-item has-centered-text">
                    <div>
                        <%= link_to follower_url(@user), method: 'GET' do%>
                            <p class="heading">
                                Followers
                            </p>
                            <p class="title is-6">
                                <%= @user.followers.count%>
                            </p>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>