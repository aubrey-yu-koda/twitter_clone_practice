<div class="column">
    <nav class="panel">
        <p class="panel-heading">Who to follow</p>
    </nav>

<% @users.each do |user| %>
    <div class="panel-block">
        <article class="media">
            <div class="media-left">
                <figure class="image is-32x32 custom-32-box">
                    <% if user.avatar.present?%>
                    <%= image_tag user.avatar.to_s %>
                    <% else %>
                    <%= image_tag (asset_path 'no_img.png') %>
                    <% end %>
                </figure>
            </div>
            
            <div class="media-content">
                <div class="content">
                    <p>
                        <strong>
                            <%= user.name %>
                        </strong> <br>
                        <small>
                            @<%= user.username %>
                        </small>
                    </p>
                </div>
            </div>
           
        </article>
    </div>
 <% end %>
</div>