<%= simple_form_for(@tweeet, data: {controller: 'places', action: 'google-maps-callback@window->places#initMap'}) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :tweeet, label: "Tweeet about it", input_html:{ class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a tweet...", autofocus: true %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.file_field :image, multiple: false %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :address, :input_html =>{class: "input", id:"autocomplete"}, wrapper: false, :placeholder => 'Start typing a place...', label_html:{class: "label"},  data: { target: "places.field", action: "keydown->places#keydown" } %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>