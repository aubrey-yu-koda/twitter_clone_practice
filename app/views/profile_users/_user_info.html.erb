<div class="column is-one-quarter">
    <div class="panel">
        <p class="panel-heading">Profile</p>
        <div class="panel-block">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <% if @user.avatar.present?%>
                        <%= image_tag @user.avatar.to_s %>
                        <% else %>
                        <%= image_tag (asset_path 'no_img.png') %>
                        <% end %>
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <p>
                            <strong><%= @user.name%></strong> <br>
                            <small>@<%= @user.username%></small>
                            <% if current_user.followees.include?(@user) %>
                                <h5><%= button_to "Unfollow", destroy_follow_path, method: "POST" %></h5>
                            <% else %>
                                <h5><%= button_to "Follow", create_follow_path, method: "POST"  %></h5>
                            <% end %>
                            <%# link_to 'Followers', user_followers_path(@user) %>
                            <%# link_to 'Following', user_followees_path(@user) %>
                        </p>
                    </div>
                </div>
            </article>
        </div>
        <div class="panel-block">
        <div class="level is-mobile">
            <div class="level-item has-centered-text">
                <div>
                    <p class="heading">
                        Tweeets
                    </p>
                    <p class="title is-6">
                        <%= @user.tweeets.count%>
                    </p>
                </div>
            </div>

            <div class="level-item has-centered-text">
                <div>
                    <%# <a href="follower"> %>
                    <%= link_to following_url(@user), method: 'GET' do%>
                        <p class="heading">
                            Following
                        </p>
                        <p class="title is-6">
                            <%= @user.followees.count%>
                        </p>
                    <% end %>
                    <%# </a> %>
                </div>
            </div>

            <div class="level-item has-centered-text">
                <div>
                    <%= link_to follower_url(@user), method: 'GET' do%>
                        <p class="heading">
                            Followers
                        </p>
                        <p class="title is-6">
                            <%= @user.followers.count%>
                        </p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>