<% if @followees.present? %>
        <div class="column is-half">
        <%= form_with(url: following_url, method: :get) do |f| %>
            <div class="field">
                <div class="control">
                    <%= label_tag(:query, "Search for Name or Username", style: "margin-bottom: 10px !important") %>
                    <%= text_field_tag(:query,"", class: "input", style: "margin-bottom: 10px !important") %>
                    <%= submit_tag("Search", class: "button is-info", style: "margin-bottom: 10px !important") %>
                </div>
            </div>
        <% end %>
        <% @followees.each do |followee| %>
            <div class="box">
                <div class="media">
                    <div class="media-left">
                        <figure class="image is-64x64">
                            <% if followee.avatar.present?%>
                            <%= image_tag followee.avatar.to_s %>
                            <% else %>
                            <%= image_tag (asset_path 'no_img.png') %>
                            <% end %>
                            <%# image_tag @user.avatar.avatar %>
                        </figure>
                    </div>

                    <div class="media-content">
                        <div class="content">
                            <a href="/profile_users/<%=followee.id%>">
                                <strong><%=followee.name%></strong> <br>
                                <small>@<%=followee.username%></small> <br>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% else %>
<div class="column is-half">
    <%= form_with(url: following_url, method: :get) do |f| %>
        <div class="field">
            <div class="control">
                <%= label_tag(:query, "Search for Name or Username", style: "margin-bottom: 10px !important") %>
                <%= text_field_tag(:query, "", class: "input", style: "margin-bottom: 10px !important") %>
                <%= submit_tag("Search", class: "button is-info", style: "margin-bottom: 10px !important") %>
            </div>
        </div>
    <% end %>
    <div class="box">
        <div class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= image_tag (asset_path 'no_img.png') %>
                </figure>
            </div>

            <div class="media-content">
                <div class="content">
                    User not found 
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>